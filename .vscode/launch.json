{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Attach to Nest",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "0.0.0.0",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app",
            "protocol": "inspector",
            "restart": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}